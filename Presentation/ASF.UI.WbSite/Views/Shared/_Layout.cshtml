    <!-- Start Header Section -->
    <header class="main_menu_sec navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12">
                    <div class="lft_hd">
                        <a href='@Url.Action("Index", "Home")'>
                            <img src='@Url.Content("~/Sima/img/logo.png")' />
                        </a>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12">
                    <div class="lft_hd">
                        <div class="main_menu">
                            <nav id="nav_menu">
                                <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                                    @*<span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>*@
                                </button>
                                <div id="navbar">
                                    <ul nav navbar-nav navbar-left>
                                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                        <li>@Html.ActionLink("Comprar", "Index", "Product")</li>
                                        <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                                        @*si el usuario admin esta logeado entonces muestra la opcion dealer en el menu*@
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li>@Html.ActionLink("Categorias", "Index", "Category")</li>
                                            <li>@Html.ActionLink("Proveedores", "Index", "Dealer")</li>
                                            <li>@Html.ActionLink("Paises", "Index", "Country")</li>
                                        }
                                        
                                    </ul>

                                    @Html.Partial("_LoginPartial")

                                </div>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
            </header>
    <!-- End Header Section -->
    @*<div id="main" class="container body-content" role="main">
